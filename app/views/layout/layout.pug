block mixins
	include ../blocks/mixins
block vars
	-title = 'Site'
	-bodyClass = ''

doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		title=title
		meta(name="description", content="")
		meta(name="keywords", content="")
		meta(name="robots", content="index, follow")
		meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1.0")
		link(rel="icon", href="favicon-16x16.png", type="image/x-icon", sizes="16x16")
		link(rel="stylesheet", href="styles/reset.css")
		link(rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css")
		link(href="https://fonts.googleapis.com/css2?family=Hind:wght@300;400;500;600;700&family=Libre+Baskerville:wght@400;700&display=swap" rel="stylesheet")
		link(rel="stylesheet", href="styles/fontawesome.css")
		link(rel="stylesheet", href="styles/styles.css")
		link(rel="icon", href="data:image/png;base64,")
	body(class=bodyClass)
		.progress-bar
		.wrapper
			block header
				include ../blocks/header
			block container
			block footer
				include ../blocks/footer
			a(href="#").back-to-top 
				<i class="fas fa-angle-up"></i>
			<i class="fas fa-angle-double-left show-sidebar"></i>
			.sidebar 
				.sidebar-item 
					<i class="fas fa-angle-double-right  hide-sidebar"></i>
				.sidebar-item 
					<i class="fas fa-arrow-left"></i>
					span.sidebar-text Back
				.sidebar-item 
					<i class="fas fa-download"></i>
					span.sidebar-text Download
				.sidebar-item 
					<i class="fas fa-shopping-cart"></i>
					span.sidebar-text Buy
		block layer
		include ../blocks/scripts